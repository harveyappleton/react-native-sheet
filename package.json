{
  "name": "react-native-sheet",
  "version": "0.1.1",
  "description": "A cross platform, pure JS implementation of bottom sheets in React Native.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "react-native-sheet.podspec",
    "!lib/typescript/example",
    "!android/build",
    "!ios/build",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__"
  ],
  "scripts": {
    "test": "jest --watch --coverage=false",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"src/**/*.{j,t}s{,x}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "bottom",
    "sheet",
    "react",
    "native",
    "js",
    "ts",
    "typescript",
    "javascript",
    "modal",
    "ios",
    "android",
    "web",
    "react-native",
    "expo"
  ],
  "repository": "https://github.com/harveyappleton/react-native-sheet",
  "author": "Harvey Appleton <info@harveyappleton.co.uk> (https://github.com/harveyappleton)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/harveyappleton/react-native-sheet/issues"
  },
  "homepage": "https://github.com/harveyappleton/react-native-sheet#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^13.2.0",
    "@react-native-community/eslint-config": "^3.0.1",
    "@release-it/conventional-changelog": "^3.3.0",
    "@testing-library/jest-native": "^4.0.2",
    "@testing-library/react-native": "^8.0.0",
    "@types/jest": "^27.0.2",
    "@types/react": "^17.0.32",
    "@types/react-native": "0.66.0",
    "commitlint": "^13.2.1",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-expo": "^43.0.1",
    "pod-install": "^0.1.28",
    "prettier": "^2.4.1",
    "react": "16.13.1",
    "react-native": "0.63.4",
    "react-native-builder-bob": "^0.18.2",
    "release-it": "^14.11.6",
    "typescript": "^4.4.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
